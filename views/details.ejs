<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Alumni Details</title>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(to right, #e0eafc, #cfdef3);
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
    }
    .profile-card {
      background: white;
      border-radius: 16px;
      padding: 30px;
      max-width: 600px;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
      text-align: center;
    }
    .profile-card img {
      width: 150px;
      height: 150px;
      border-radius: 50%;
      object-fit: cover;
      border: 4px solid #3498db;
      margin-bottom: 20px;
    }
    h2 {
      margin: 10px 0 5px;
      color: #2c3e50;
    }
    p {
      margin: 5px 0;
      color: #555;
    }
    .bio {
      margin-top: 20px;
      padding-top: 15px;
      border-top: 1px solid #ddd;
      color: #333;
      font-style: italic;
    }
    .back-button {
      margin-top: 30px;
      padding: 10px 20px;
      background-color: #3498db;
      color: white;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      transition: background 0.3s ease;
    }
    .back-button:hover {
      background-color: #2c80b4;
    }
    .social-links {
      margin-top: 20px;
    }
    .social-links a {
      margin: 0 10px;
      text-decoration: none;
      color: #3498db;
      font-weight: bold;
    }
    form {
      margin-top: 30px;
      text-align: left;
      max-width: 600px;
      width: 100%;
    }
    form input, form textarea {
      width: 100%;
      padding: 10px;
      margin: 10px 0;
      border: 1px solid #ccc;
      border-radius: 6px;
    }
    form button {
      padding: 10px 20px;
      background-color: #2ecc71;
      color: white;
      border: none;
      border-radius: 6px;
      cursor: pointer;
    }
    form button:hover {
      background-color: #27ae60;
    }
  </style>
</head>
<body>
  <div class="profile-card" id="profile">
    <!-- Profile content will be injected here -->
  </div>

  <form id="contactForm">
    <h3>Contact This Alumnus</h3>
    <input type="text" placeholder="Your Name" required>
    <input type="email" placeholder="Your Email" required>
    <textarea placeholder="Your Message" rows="5" required></textarea>
    <button type="submit">Send Message</button>
  </form>

  <button class="back-button" onclick="goBack()">‚Üê Back to Home</button>

  <script>
    function goBack() {
      window.location.href = 'index.html';
    }

    const alum = JSON.parse(sessionStorage.getItem('selectedAlum'));

    if (alum) {
      const profile = document.getElementById('profile');
      profile.innerHTML = `
        <img src="${alum.image}" alt="${alum.name}" />
        <h2>${alum.name}</h2>
        <p><strong>Batch:</strong> ${alum.batch}</p>
        <p><strong>Occupation:</strong> ${alum.occupation}</p>
        <p><strong>Email:</strong> ${alum.email}</p>
        <p><strong>Location:</strong> ${alum.location}</p>
        <p class="bio">${alum.details}</p>
        <div class="social-links">
          <a href="#" target="_blank">LinkedIn</a>
          <a href="#" target="_blank">Twitter</a>
          <a href="#" target="_blank">Portfolio</a>
        </div>
      `;
    } else {
      document.getElementById('profile').innerHTML = '<p>No alumni data found. Please return to the homepage and select a profile.</p>';
    }

    document.getElementById('contactForm').addEventListener('submit', function(e) {
      e.preventDefault();
      alert('Message sent successfully!');
      this.reset();
    });
  </script>
</body>
</html>
